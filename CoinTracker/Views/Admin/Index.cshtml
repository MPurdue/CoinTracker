@model List<CoinTracker.Models.ViewModels.UserRoleViewModel>

@{
    ViewData["Title"] = "User Management";
}

<h2>User Management</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Email</th>
            <th>Admin</th>
            <th>User</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>

                <!-- ADMIN ROLE -->
                <td>
                    <form asp-action="UpdateRole" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="userId" value="@user.UserId" />
                        <input type="hidden" name="role" value="Admin" />
                        <input type="hidden" name="isInRole" value="@(!user.Roles.Contains("Admin"))" />
                        <button class="btn btn-sm @(user.Roles.Contains("Admin") ? "btn-danger" : "btn-success")">
                            @(user.Roles.Contains("Admin") ? "Remove" : "Add")
                        </button>
                    </form>
                </td>

                <!-- USER ROLE -->
                <td>
                    <form asp-action="UpdateRole" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="userId" value="@user.UserId" />
                        <input type="hidden" name="role" value="User" />
                        <input type="hidden" name="isInRole" value="@(!user.Roles.Contains("User"))" />
                        <button class="btn btn-sm @(user.Roles.Contains("User") ? "btn-danger" : "btn-success")">
                            @(user.Roles.Contains("User") ? "Remove" : "Add")
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
