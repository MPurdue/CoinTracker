@model CoinTracker.Models.ViewModels.CoinImportViewModel

@{
    ViewData["Title"] = "Import Coins";
}

<h2>Import Coins from Excel</h2>

<form asp-action="Import" method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label asp-for="ExcelFile" class="form-label"></label>
        <input asp-for="ExcelFile" type="file" class="form-control" />
        <span asp-validation-for="ExcelFile" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">
        Import
    </button>

    <a asp-action="Index" class="btn btn-secondary">
        Cancel
    </a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
